package com.baemin.dao;

import java.util.List;
import java.util.Map;

import org.apache.ibatis.session.SqlSession;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Repository;

import com.baemin.dto.Order;
import com.baemin.dto.OrderDetail;
import com.baemin.login.LoginDetails;

@Repository
public class OrderDAOImp implements OrderDAO {

	@Autowired
	private SqlSession sql;
	

	@Override
	public void memberOrder(Map<String, Object> map) {
		sql.insert("order.memberOrder", map);
		
	}


	@Override
	public void nonMemberOrder(Map<String, Object> map) {
		sql.insert("order.nonMemberOrder", map);
	}


	@Override
	public List<OrderDetail> memberOrderList(long userId) {
		return sql.selectList("order.memberOrderList", userId);
	}


	@Override
	public List<OrderDetail> nonMemberOrderList(String guestId) {
		return sql.selectList("order.nonMemberOrderList", guestId);
	}

}
