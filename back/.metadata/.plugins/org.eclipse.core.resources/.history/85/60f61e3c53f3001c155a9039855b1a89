package com.baemin.controller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.HttpStatus;
import org.springframework.http.ResponseEntity;
import org.springframework.security.core.annotation.AuthenticationPrincipal;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;

import com.baemin.common.GuestId;
import com.baemin.dto.Order;
import com.baemin.dto.OrderDetail;
import com.baemin.dto.User;
import com.baemin.login.LoginDetails;
import com.baemin.service.OrderService;

@Controller
public class OrderController {
	
	@Autowired
	private OrderService orderService;
	
	@PostMapping("/order")
	public ResponseEntity<?> order(@RequestBody Order order, @AuthenticationPrincipal LoginDetails user){
		System.out.println("주문하기");
		
		User userInfo = user != null ? user.getUser() : null;
		
		ResponseEntity<?> result = orderService.order(order, userInfo);
//		return null;
		return result;
	}
	
	
	@GetMapping("/orderList")
	public ResponseEntity<?> orderList(@AuthenticationPrincipal LoginDetails user){
		System.out.println("주문목록");
		User userInfo = user != null ? user.getUser() : null;
		
		Object userId;
		boolean member;
		
		if(userInfo != null) {
			userId = userInfo.getUserId();
			member = true;
		} else {
			userId = GuestId.getId();
			member = false;
		}
		
		System.out.println();
		
//		List<OrderDetail> list = orderService.getOrderList(userId, member);
//		if(userInfo != null) {
//			list = orderService.getMemberOrderList(userInfo.getUserId());
//		} else {
//			list = orderService.getNonMemberOrderList(guestId);
//		}
		
		return new ResponseEntity<>(list, HttpStatus.OK);
	}
	
	
	@GetMapping("/orderDetail/{orderNum}")
	public ResponseEntity<?> orderDeteail(@AuthenticationPrincipal LoginDetails user, @PathVariable String orderNum){
		System.out.println("주문 상세");
		User userInfo = user != null ? user.getUser() : null;
		
		OrderDetail detail = orderService.getOrderDetail(orderNum, userInfo);
		
		return new ResponseEntity<>(detail, HttpStatus.OK);
	}
	
	
	

}
