<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="order">

	<insert id="memberOrder">
			insert into order_member (
				order_num
		    ,user_id
		    ,store_id
		    ,delevery_address
		    ,pay_method 
		    ,used_point 
		    ,total_price
		    ,request 
		    ,imp_uid 
		    ,order_menu_json
			) values (
				#{order.orderNum}
				,#{userId}
				,#{order.storeId}
				,#{order.address}
				,#{order.payMethod}
				,#{order.usedPoint}
				,#{order.totalPrice}
				,#{order.request}
				,''			
				,#{orderMenuJson}
			)
	</insert>
	
	
	<insert id="nonMemberOrder">
		insert into order_non_member (
				order_num
		    ,user_id
		    ,store_id
		    ,delevery_address
		    ,pay_method 
		    ,used_point 
		    ,total_price
		    ,request 
		    ,imp_uid 
		    ,order_menu_json
			) values (
				#{order.orderNum}
				,#{userId}
				,#{order.storeId}
				,#{order.address}
				,#{order.payMethod}
				,#{order.usedPoint}
				,#{order.totalPrice}
				,#{order.request}
				,''			
				,#{orderMenuJson}
			)
	</insert>
	
	
	<select id="memberOrderList" resultType="OrderList">
		select 		o.*
							,s.store_name
	            ,s.store_img
		from 			order_member o
		left join	store s	
		on				o.store_id = s.store_id
	</select>
	
	
	<select id="nonMemberOrderList" resultType="OrderList">
		select 		o.*
							,s.store_name
	            ,s.store_img
		from 			order_non_member o
		left join	store s	
		on			o.store_id = s.store_id
	</select>
	
	

	
	
	
	
</mapper>
